<%= form_for([@comment, @comment.respuesta.build]) do |f| %>

  <div class="field">
    <%= f.text_area :description, :rows => 6 %>
  </div>
  <div class="field" style="visibility:hidden;display:none;">
    <%= f.label :comment_id %><br />
    <%= f.text_field :comment_id %>
  </div>
  <div class="field" style="visibility:hidden;display:none;" >
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit "Crear respuesta", :class => 'botonaccion' %>
  </div>
<% end %>
