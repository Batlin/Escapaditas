<h2>Editar tu información personal</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %> <i>(déjalo en blanco si no quieres cambiarlo)</i><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :current_password %> <i>(necesitamos que confirmes tu contraseña para aplicar los cambios)</i><br />
  <%= f.password_field :current_password %></p>

  <p>Imagen de perfil<br />
  <%= f.text_field :image_url %></p>

  <p><%= f.submit "Actualizar", :class => 'botonaccion' %></p>
<% end %>

<p><%= link_to "Cancelar mi cuenta", registration_path(resource_name), :confirm => "¿Estás seguro?", :method => :delete %>.</p>

<%= link_to "Atrás", :back %>
