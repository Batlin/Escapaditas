<h2>Crear una cuenta</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :new, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <p>Nombre público<br />
  <%= f.text_field :name %></p>

  <p>Correo electrónico<br />
  <%= f.email_field :email %></p>

  <p>Contraseña<br />
  <%= f.password_field :password %></p>

  <p>Confirma la contraseña<br />
  <%= f.password_field :password_confirmation %></p>

  <p>Imagen de perfil<br />
  <%= f.text_field :image_url %></p>

  <p><%= f.submit "Aceptar", :class => 'botonaccion' %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
